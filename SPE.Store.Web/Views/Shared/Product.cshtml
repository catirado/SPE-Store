@model SPE.Store.Web.Models.ProductListViewModel

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Content("~/Images/books/" + Model.Image)" alt="@Model.Name">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>
                <h3 class="danger">@Model.Price</h3> 
                <a href="#" class="btn btn-default" role="button">Comprar</a>
            </p>
        </div>
    </div>
</div>