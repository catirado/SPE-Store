@{
    ViewBag.Title = "Index";
}

@model SPE.Store.Web.Models.ShoppingCartViewModel


@if (Model.Lines != null && Model.Lines.Count > 0) { 
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <h1>Carrito</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th class="text-center">Precio</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach(var line in Model.Lines)
                    {
                        
                    <tr>
                        <td class="col-sm-8 col-md-6">
                            <div class="media">
                                <div class="media-body">
                                    <h4 class="media-heading"><a href="#">@line.ProductName</a></h4>
                                </div>
                            </div>
                        </td>
                        <td class="col-sm-1 col-md-1" style="text-align: center"><strong>@line.Quantity</strong>
                        </td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>@line.Price</strong></td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>@line.Amount</strong></td>
                        <td class="col-sm-1 col-md-1">
                            <a href="@Url.Action("Delete", "ShoppingCart", new { itemLineId = line.Id })" type="button" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span> Eliminar
                            </a>
                        </td>
                    </tr>

                    }
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>@Model.Total</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                            <a href="@Url.Action("Index","Products")" class="btn btn-default">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Seguir comprando
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Checkout","ShoppingCart")" class="btn btn-success">
                                Pagar <span class="glyphicon glyphicon-play"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
}else
{
<p>El carrito está vacío</p>
}